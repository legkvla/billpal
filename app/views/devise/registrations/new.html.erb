<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="span4 offset4">

      <div class="padded">

        <div class="login box" style="margin-top: 80px;">

          <div class="box-header">
            <span class="title">Зарегистрироваться</span>
            <ul class="box-toolbar">
              <li class="muted"><%= render "devise/shared/links" %></li>
            </ul>
          </div>

          <div class="box-content padded">
            <form class="separate-sections">

              <label>
                  <div class="input-prepend">
                  <span class="add-on" href="#">
                    <i class="icon-envelope"></i>
                  </span>
                    <%= f.email_field :email, autofocus: true, placeholder: "email" %>
                  </div>
              </label>

              <label>
                  <div class="input-prepend">
                  <span class="add-on" href="#">
                    <i class="icon-key"></i>
                  </span>
                    <%= f.password_field :password,  placeholder: "пароль" %>
                  </div>
              </label>

              <div>
                <button class="btn btn-blue btn-block">Зарегистрироваться <i class="icon-ok"></i></button>
              </div>

            </form>
          </div>

        </div>

        <div class="row-fluid" style="margin-bottom: 10px">
          <div class="span6">
            <a href="<%= user_omniauth_authorize_url(:facebook) %>" class="btn btn-facebook btn-block"><i class="icon-facebook-sign"></i> Facebook</a>
          </div>
          <div class="span6">
            <a href="<%= user_omniauth_authorize_url(:twitter) %>" class="btn btn-twitter btn-block"><i class="icon-twitter"></i> Twitter</a>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span6">
            <a href="<%= user_omniauth_authorize_url(:vkontakte) %>" class="btn btn-vk btn-block"><i class="icon-sign-blank"></i> Vkontakte</a>
          </div>
          <div class="span6">
            <a href="#" class="btn btn-gplus btn-block"><i class="icon-google-plus"></i> Google+</a>
          </div>
        </div>
      </div>
    </div>
<% end %>
