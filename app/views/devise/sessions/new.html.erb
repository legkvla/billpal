<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div class="span4 offset4">


      <div class="padded">
        <div class="login box" style="margin-top: 80px;">

          <div class="box-header">
            <span class="title">Login</span>
          </div>

          <div class="box-content padded">
            <form class="separate-sections">
              <label>
                  <div class="input-prepend">
                  <span class="add-on" href="#">
                    <i class="icon-user"></i>
                  </span>
                    <%= f.email_field :email, placeholder: "email", autofocus: true %>
                  </div>
              </label>

              <label>
                  <div class="input-prepend">
                  <span class="add-on" href="#">
                    <i class="icon-key"></i>
                  </span>
                    <%= f.password_field :password, placeholder: "пароль" %>
                  </div>
              </label>


              <% if devise_mapping.rememberable? -%>
                  <label><div><%= f.check_box :remember_me %> Запомнить меня</div></label>
              <% end -%>

              <div>
                <button class="btn btn-blue btn-block">
                    Войти <i class="icon-signin"></i>
                </button>
              </div>

            </form>
            <%= render "devise/shared/links" %>
          </div>

        </div>

        <div class="row-fluid">
          <div class="span4">
            <a href="<%= user_omniauth_authorize_url(:facebook) %>" class="btn btn-facebook btn-block"><i class="icon-facebook-sign"></i> Facebook</a>
          </div>
          <div class="span4">
            <a href="<%= user_omniauth_authorize_url(:twitter) %>" class="btn btn-twitter btn-block"><i class="icon-twitter"></i> Twitter</a>
          </div>
          <div class="span4">
            <a href="<%= user_omniauth_authorize_url(:vkontakte) %>" class="btn btn-vkontakte btn-block"><i class="icon-vkontakte"></i> Vkontakte</a>
          </div>
        </div>
      </div>
    </div>
<% end %>
